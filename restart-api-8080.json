{
  "commands": [
    "cd /home/ec2-user",
    "sudo systemctl stop milo-backend.service",
    "git clone https://github.com/Icokruger999/milo.git temp-repo",
    "sudo cp temp-repo/backend/Milo.API/Services/milo-backend.service /etc/systemd/system/milo-backend.service",
    "sudo systemctl daemon-reload",
    "sudo systemctl start milo-backend.service",
    "sleep 3",
    "sudo systemctl status milo-backend.service --no-pager | head -n 15",
    "rm -rf temp-repo",
    "echo ''",
    "echo '=== Testing API on port 8080 ==='",
    "curl -s http://localhost:8080/api/health || echo 'API not responding'"
  ]
}
