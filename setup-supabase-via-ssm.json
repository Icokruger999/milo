{
  "InstanceIds": ["i-06bc5b2218c041802"],
  "DocumentName": "AWS-RunShellScript",
  "Comment": "Setup Supabase database connection and create milo database",
  "TimeoutSeconds": 300,
  "Parameters": {
    "commands": [
      "#!/bin/bash",
      "echo '========================================'",
      "echo 'Setting up Supabase Database Connection'",
      "echo '========================================'",
      "echo ''",
      "echo 'Note: This script requires:'",
      "echo '1. Supabase project URL (e.g., https://xxxxx.supabase.co)'",
      "echo '2. Database password from Supabase Settings > Database'",
      "echo '3. Database host (e.g., db.xxxxx.supabase.co)'",
      "echo ''",
      "echo 'To create the milo database, run the SQL script in Supabase SQL Editor:'",
      "echo 'See: setup-supabase-milo-database.sql'",
      "echo ''",
      "echo 'After creating the database, update appsettings.json with:'",
      "echo 'Host=db.xxxxx.supabase.co;Database=milo;Username=postgres;Password=YOUR_PASSWORD;Port=5432;SSL Mode=Require'",
      "echo ''",
      "echo 'Setup instructions saved to setup-supabase-milo-database.sql'"
    ]
  }
}
